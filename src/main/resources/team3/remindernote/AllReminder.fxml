                  <Button fx:id="AddReminder" mnemonicParsing="false" prefHeight="46.0" prefWidth="167.0" style="-fx-background-color: #76A8F5;" text="Add remind" textFill="#0c3a6f">
                     <font>
                        <Font size="22.0" />
                     </font>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Button>
                  <ScrollPane prefHeight="484.0" prefWidth="701.0" style="-fx-border-color: white;">
