   <top>
      <Pane prefHeight="47.0" prefWidth="1000.0" style="-fx-background-color: #76ABF5;" BorderPane.alignment="CENTER">
         <children>
            <Label layoutX="14.0" layoutY="1.0" text="Hello User">
               <font>
                  <Font size="30.0" />
               </font>
            </Label>
         </children>
      </Pane>
